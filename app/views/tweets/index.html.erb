<p id="notice"><%= notice %></p>

<h1>Tweets</h1>

<%= form_with(url: search_path, method: "get", local: true) do %>
  <%= label_tag(:location, "Search Tweet:") %>
  <%= text_field_tag(:search_term) %>
  <%= submit_tag("Search") %>
<% end %>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Created at</th>
      <th>Updated at</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tweets.each do |tweet| %>
      <tr>
        <td><%= tweet.description %></td>
        <td><%= tweet.created_at %></td>
        <td><%= tweet.updated_at %></td>
        <% if tweet.user_id.present? %>
          <td><%= tweet.user.email %></td>
        <% else %>
          <td><%= tweet.user_id %></td>
        <% end %>
        <td><%= link_to 'Show', tweet %></td>
        <% if user_signed_in?%>
          <td><%= link_to "Retweet", retweet_path(id: tweet.id), method: :post %></td>
          <%if current_user && current_user.id == tweet.user_id%>
            <td><%= link_to 'Edit', edit_tweet_path(tweet) %></td>
            <td><%= link_to 'Destroy', tweet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Tweet', new_tweet_path %>
